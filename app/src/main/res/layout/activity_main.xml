<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content">
        <EditText android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:inputType="textUri" android:id="@+id/et_uri"/>
        <ImageButton android:layout_width="60dp" android:layout_height="match_parent" android:text="前往"
                     android:id="@+id/btn_go" android:src="@drawable/ic_chevron_right_black_24dp"
                     android:background="#00FFFFFF"/>
    </LinearLayout>
</LinearLayout>